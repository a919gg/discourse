<div class='reviewable-item {{customClass}}' data-reviewable-id={{reviewable.id}}>
  {{component reviewableComponent reviewable=reviewable tagName=''}}

  <div class='reviewable-actions'>
    {{#each reviewable.reviewable_actions as |a|}}
      {{d-button
        class=(concat "reviewable-action " a.id)
        disabled=updating
        icon=a.icon
        action=(action "perform" a.id)
        translatedLabel=a.title}}
    {{/each}}
  </div>
</div>
